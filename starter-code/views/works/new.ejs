

<h1 class="greeen">Create a work</h1>

<% if (typeof(errors) !== "undefined"){ %>
  <ul>
    <% for (let error in errors){ %>
      <li><%= errors[error].message %></li>
    <% } %>
  </ul>
<% } %>
<br/><br/>
<form action="/farms/<%= farmId %>/works" method="POST" enctype="multipart/form-data">

<label for="picture">Picture</label>
<input type="file" class="form-control-file" id="picture" name="picture" value="<%= work.picture %>">
<br/><br/>
<label>
Name
<input type="text" name="name" value="<%= work.name %>">
</label>
<br/><br/>

<label>
Description
<textarea type="text" name="description"><%= work.description %></textarea>
</label>
<br/><br/>

<label>
Number of workers needed
<input type="number" name="numberOfWorkers"  value="<%= work.numberOfWorkers %>">
</label>
<br/><br/>

<label>
Hours expected
<input type="number" name="hoursExpected"  value="<%= work.hoursExpected %>">
</label>
<br/><br/>

<label>
Start Date
<input type="date" name="startDate"  value="<%= work.startDate %>">
</label>
<br/><br/>

<label>
End Date
<input type="date" name="endDate"  value="<%= work.endDate %>">
</label>
<br/><br/>



<label>
Reward
<input type="object" name="reward"  value="<%= work.reward%>">
</label>
<br/><br/>

  <button class="btn btn-success" type="submit">Create Work</button>
</form>

